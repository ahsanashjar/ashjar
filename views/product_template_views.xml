<odoo>
    <data>
        <!-- Inherit the product.template form view to add the ecom_product_id field -->
        <record id="view_product_template_form_inherited" model="ir.ui.view">
            <field name="name">product.template.form.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tag_ids']" position="after">
<!--                    <field name="ecom_product_id"/>-->
                    <!--                    <field name="product_combination_id"/>-->

                </xpath>
                <!-- Add the Update Product Price button after an appropriate anchor point -->
                <xpath expr="//header" position="inside">
                    <button name="action_update_product_price"
                            type="object"
                            string="Update Product Price"
                            class="oe_highlight"/>
                </xpath>
            </field>
        </record>

        <record id="view_product_normal_form_inherit" model="ir.ui.view">
            <field name="name">product.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <!-- Add ecom_product_id field after product_tag_ids -->
<!--                <xpath expr="//field[@name='product_tag_ids']" position="after">-->
<!--                    <field name="product_combination_id"/>-->
<!--                </xpath>-->

                <!--                 Add the Update Product Price button inside the header -->
                <xpath expr="//header" position="inside">
                    <button name="action_update_product_v_price"
                            type="object"
                            string="Update Product Price"
                            class="oe_highlight"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
