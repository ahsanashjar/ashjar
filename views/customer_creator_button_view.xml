<odoo>
    <data>
        <!-- Define a view for the button only -->

        <record id="view_customer_creator_button" model="ir.ui.view">
            <field name="name">customer.creator.button.view</field>
            <field name="model">customer.creator</field>
            <field name="arch" type="xml">
                <form string="Customer Creator">
                    <header>
<!--                        <button name="create_sale_orders_from_data" string="Fetch Data" type="object"-->
<!--                                class="oe_highlight"/>-->
<!--                        <button name="action_update_product_price" string="Update Product Price" type="object"-->
<!--                                class="oe_highlight"/>-->
<!--                        <button name="create_sale_orders_from_api" string="All Fetch Data" type="object"-->
<!--                                class="oe_highlight"/>-->

                    </header>
                    <group>
                        <field name="request_date"/>
                        <field name="json_data" readonly="true"/>
                        <field name="status"/>
                    </group>

                </form>
            </field>
        </record>

        <!-- Update the action to point to the button-only view -->
        <record id="action_customer_creator_button" model="ir.actions.act_window">
            <field name="name">Customer Creator</field>
            <field name="res_model">customer.creator</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_customer_creator_button"/>
            <field name="target">current</field>
        </record>

